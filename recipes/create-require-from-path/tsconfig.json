{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "alwaysStrict": true,
    "baseUrl": "./",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "lib": ["ESNext", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitThis": true,
    "removeComments": true,
    "strict": true,
    "stripInternal": true,
    "target": "esnext"
  },
  "include": ["./"],
  "exclude": [
    "node_modules",
    "./node_modules",
    "tests/expected/**",
    "tests/input/**"
  ]
}
